extends layout.pug
block common_vars
	- var authLink= authHref
	- var details=userDetails
block head
	title Concept Corner | Confirm details
	link(rel="stylesheet", href="/css/signup.css")
	script(src="/js/signup.js")

block container
	.row
		.col
			.col-8.header
				h2.header-text Confirm your details
			form.col-8.confirm-page-form(action="javascript:void(0)" method="POST" onsubmit='confirmAndSignUp(event, ' + JSON.stringify(userDetails) + ')')
				
				.profile
					input.upload-image(type="file", accept='image/*' name="uploadImage", onchange='readUrl(event)')
					img.uploaded-image(src="/images/avatar.png", alt="",data-url='' srcset="")
					button.btn-uploadPic(type='button', onclick='callEvent()') Upload picture
				.details#details
					.inputBox
						input(type="text", name="username",value="" id='username'  onchange='checkUserName(this)' onfocus='addContentActive(event)',onblur='checkContent()')
						label(for="username") Username
							span.required *
						span#userNameMessage
						br
						#userNameMessage
					.inputBox
						input(type="text",name="name",value=userDetails.name id='name' onchange='addContentActive(event)', onfocus='addContentActive(event)',onblur='checkContent()')
						label(for="name") Name
							span.required *
						br
					.inputBox.content_active
						input(type="text",name="emailId",value=userDetails.email, onfocus='addContentActive(event)',onblur='checkContent()')
						label(for="emailId") Email ID

						br
					.inputBox
						input(type="text", name="title",value="", onfocus='addContentActive(event)',onblur='checkContent()')
						label(for="title") Title
						br
					.inputBox.content_active
						input(type="text",name="company",value=userDetails.company, onfocus='addContentActive(event)',onblur='checkContent()')
						label(for="company") Company
						br
					.inputBox.content_active
						input(type="text",name="location", value= userDetails.location, onfocus='addContentActive(event)',onblur='checkContent()')
						label(for="location") Location
						br
					.inputBox
						textarea(name="aboutMe", cols="30", rows="10", value=userDetails.bio, onfocus='addContentActive(event)',onblur='checkContent()')
						label(for="aboutMe") About me
						br
					script.
						addContentActiveToAll()
					.buttons
						button#confirmBtn.primary-btn(type="submit") Confirm
						a(href='/')
							button.cancel-btn(type='button') Cancel

